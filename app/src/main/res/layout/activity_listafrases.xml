<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.glind.Listafrases"
    android:background="@color/background_material_light"
    android:padding="0dp">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="469dp"
        android:id="@+id/listView2"
        android:layout_alignParentStart="false"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:textFilterEnabled="false"
        android:smoothScrollbar="true"
        android:background="@color/background_material_light"
        android:choiceMode="singleChoice"
        android:dividerHeight="0.5dp"
        android:divider="#ededed"
        android:fastScrollAlwaysVisible="false"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/searchView1"
        android:scrollingCache="true"
        android:layout_above="@+id/linearLayout12" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@mipmap/bottomview3"
        android:id="@+id/linearLayout12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout11"
        android:background="@color/lightMahogany"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frases"
            android:id="@+id/list"
            android:textColor="@color/background_material_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Elija una de las siguientes frases"
            android:id="@+id/textView8"
            android:textColor="@color/button_material_light"
            android:layout_below="@+id/list"
            android:layout_alignStart="@+id/list" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@mipmap/ic_import_contacts_white_36dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView1"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp" />

</RelativeLayout>
