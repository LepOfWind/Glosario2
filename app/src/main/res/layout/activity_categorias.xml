<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?attr/actionBarSize"
    android:background="@color/background_material_light"
    android:padding="0dp">

    <ListView
        tools:context="com.glind.Categorias"
        android:layout_width="fill_parent"
        android:layout_height="469dp"
        android:id="@+id/lista"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="true"
        android:background="@color/background_material_light"
        android:headerDividersEnabled="false"
        android:drawSelectorOnTop="false"
        android:dividerHeight="0.5dp"
        android:choiceMode="singleChoice"
        android:cacheColorHint="#e5caf2"
        android:divider="#ededed"
        android:footerDividersEnabled="false"
        android:layout_below="@+id/relativeLayout5"
        android:layout_above="@+id/linearLayout7" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bottomview3"
        android:id="@+id/linearLayout7"
        android:visibility="visible"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightMahogany"
        android:elevation="3dp"
        android:id="@+id/relativeLayout5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secciones"
            android:id="@+id/secc"
            android:textColor="@color/background_material_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Elija una de las siguientes secciones"
            android:id="@+id/textView6"
            android:textColor="@color/button_material_light"
            android:layout_below="@+id/secc"
            android:layout_toEndOf="@+id/imageView8" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@mipmap/ic_import_contacts_white_36dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

</RelativeLayout>
