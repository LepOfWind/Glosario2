<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.glind.MainActivity"
    android:background="@drawable/fnd2"
    android:padding="0dp">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout3"
        android:elevation="0dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_toEndOf="@+id/button5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/tit2"
            android:elevation="0dp"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="-10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione una lengua indígena:"
            android:id="@+id/leng"
            android:layout_below="@+id/frameLayout3"
            android:layout_centerHorizontal="true"
            android:textColor="#afafaf"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingBottom="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adv"
            android:src="@mipmap/ic_info_outline_black_24dp"
            android:onClick="advertencia"
            android:layout_gravity="right|top"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/sync"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:id="@+id/sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button4"
            android:layout_alignParentStart="true"
            android:layout_gravity="right|top"
            android:layout_marginRight="45dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:src="@mipmap/ic_sync_black_24dp"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relativeLayout3"
        android:background="#eaffffff"
        android:paddingBottom="5dp"
        android:elevation="2dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/frameLayout3"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:onClick="start"
            android:src="@drawable/sig"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/imageView2"
            android:text="Español"
            android:textAlignment="viewEnd"
            android:textColor="#5e5e5e"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_keyboard_arrow_right_black_24dp"
            android:paddingLeft="2dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@+id/imageView2"
            android:textAlignment="viewStart"
            android:textColor="#5e5e5e"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_overlay"
            android:id="@+id/linearLayout15"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar"
            android:id="@+id/button4"
            android:onClick="start"
            android:visibility="visible"
            android:background="@drawable/esquinas_redondeadas"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textColor="@color/background_material_light"
            android:elevation="5dp"
            android:enabled="true"
            android:layout_below="@+id/linearLayout15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="12dp" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#bdff6c"
        android:id="@+id/relativeLayout4"
        android:layout_centerHorizontal="true">

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créditos"
        android:id="@+id/button5"
        android:enabled="true"
        android:onClick="start1"
        android:textColor="@color/background_material_light"
        android:background="@color/material_blue_grey_800"
        android:visibility="gone"
        android:layout_marginBottom="46dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@mipmap/bottomview3"
        android:id="@+id/linearLayout13"
        android:layout_alignParentTop="false"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="#FF251D22"
        app:srcCompat="@drawable/ic_favorite_white_48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_toEndOf="@+id/linearLayout13"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/update"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#5a5a5a"
            android:paddingTop="5dp" />
    </RelativeLayout>


</RelativeLayout>
